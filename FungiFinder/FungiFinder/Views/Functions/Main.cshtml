@model FunctionMainVM

@{
    ViewData["Title"] = "Main";
}
@section scripts{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="~/js/Main.js"></script>
}


<br />
<h4 class="row container-fluid align-self-center justify-content-center">Fungi Finder</h4>
<br />
<div class="searcher row container-fluid align-self-center justify-content-center" id="searcher" style="display: none;">
    <img src="~/Images/Gifs/FungiSearchGif.gif" alt="Searching..." style="margin-left: 30px;" />
</div>
<div class="container-fluid align-self-center">
    <div class="justify-content-center align-self-center">
        <div id="resultHere"></div>
        <div class="border-0" id="result"></div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input asp-for="ImgToSearch" type="file" class="custom-file-input" onchange="uploadFile('picture')" id="picture">
                        <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                    </div>
                    @*<div class="input-group-append">
                            <button class="input-group-text" onclick="getResult()" id="">Sök</button>
                        </div>*@
                </div>
                @*<input id="picture" asp-for="ImgToSearch" type="file" onchange="uploadFile('picture')" class="btn btn-outline-dark" />*@
                <div class="form-group row justify-content-center">
                    <input type="button" id="btn_search" onclick="getResult()" value="Sök" class="btn btn-outline-dark" />
                </div>
            </div>
        </div>
        <div>
        </div>
    </div>
</div>

